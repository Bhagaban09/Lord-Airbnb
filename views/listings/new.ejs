
<%-layout("/Layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
    <h3>Create A New Listings</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
         <div class="mb-3">
            <lable for="title" class="form-label">Enter Title</lable>
        <input name="listing[title]" placeholder="Enter your Title" type="text" class="form-control" required>
        <div class="valid-feedback">
       Title Looks good!
    </div>
         </div>
         <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">
         Please Add a Short Description..
    </div>
</div>
        <div class="mb-3">
            <lable for="image" class="form-label"> Upload Listing Image</lable>
            <input name="listing[image]"  type="file" class="form-control" required>
            <div class="invalid-feedback">
                Please Upload a Image</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input
                 name="listing[price]"
                  placeholder="1200"
                   class="form-control">
                   <div class="invalid-feedback">
         Provide a Valid Price
    </div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input 
                name="listing[country]"
                 placeholder="India" 
                 type="text" 
                 class="form-control" required/>
                 <div class="invalid-feedback">
                    Provide a Valid Country
    </div>
            </div>

        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
            <div class="invalid-feedback">
                    Provide a Valid Location
    </div>
        </div>
        <br>
        <br>
        <button class="btn btn-dark add-btn">Save Data</button>
        <br>
        <br>
   </form>
</div>
</div>
